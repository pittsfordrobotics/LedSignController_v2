<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.ConfigurationFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/configStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Not connected." />

        <TableLayout
            android:id="@+id/configTable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_column="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center"
                    android:textAlignment="viewEnd"
                    android:text="Color Pattern: " />

                <Spinner
                    android:id="@+id/colorPattern"
                    android:layout_column="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/textView1"
                    android:layout_column="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center"
                    android:textAlignment="viewEnd"
                    android:text="Display Pattern: " />

                <Spinner
                    android:layout_column="1"
                    android:id="@+id/displayPattern"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtBrightness"
                    android:layout_column="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center"
                    android:textAlignment="viewEnd"
                    android:text="Brightness: " />

                <SeekBar
                    android:id="@+id/seekBarBrightness"
                    android:layout_column="1"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:min="0"
                    android:max="255"
                    />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtSpeed"
                    android:layout_column="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center"
                    android:textAlignment="viewEnd"
                    android:text="Speed: " />

                <SeekBar
                    android:id="@+id/seekBarSpeed"
                    android:layout_column="1"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:min="0"
                    android:max="255"
                    />

            </TableRow>

            <!--
            TODO:
            Try to make these rows into fragments or some other
            self-contained entity.
            -->
            <TableRow
                android:id="@+id/trParam1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtParam1"
                    android:layout_column="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center"
                    android:textAlignment="viewEnd"
                    android:text="Parameter 1: " />

                <SeekBar
                    android:id="@+id/seekBarParam1"
                    android:layout_column="1"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:min="0"
                    android:max="255"
                    />

            </TableRow>

            <TableRow
                android:id="@+id/trParam2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtParam2"
                    android:layout_column="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center"
                    android:textAlignment="viewEnd"
                    android:text="Parameter 2: " />

                <SeekBar
                    android:id="@+id/seekBarParam2"
                    android:layout_column="1"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:min="0"
                    android:max="255"
                    />

            </TableRow>

            <TableRow
                android:id="@+id/trParam3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtParam3"
                    android:layout_column="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center"
                    android:textAlignment="viewEnd"
                    android:text="Parameter 3: " />

                <SeekBar
                    android:id="@+id/seekBarParam3"
                    android:layout_column="1"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:min="0"
                    android:max="255"
                    />

            </TableRow>

            <TableRow
                android:id="@+id/trParam4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtParam4"
                    android:layout_column="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center"
                    android:textAlignment="viewEnd"
                    android:text="Parameter 4: " />

                <SeekBar
                    android:id="@+id/seekBarParam4"
                    android:layout_column="1"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:min="0"
                    android:max="255"
                    />

            </TableRow>

            <TableRow
                android:id="@+id/trParam5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtParam5"
                    android:layout_column="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center"
                    android:textAlignment="viewEnd"
                    android:text="Parameter 5: " />

                <SeekBar
                    android:id="@+id/seekBarParam5"
                    android:layout_column="1"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:min="0"
                    android:max="255"
                    />

            </TableRow>

            <TableRow
                android:id="@+id/trParam6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtParam6"
                    android:layout_column="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center"
                    android:textAlignment="viewEnd"
                    android:text="Parameter 6: " />

                <SeekBar
                    android:id="@+id/seekBarParam6"
                    android:layout_column="1"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:min="0"
                    android:max="255"
                    />

            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnReload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Reload" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btnUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Send" />

        </LinearLayout>

    </LinearLayout>
</FrameLayout>